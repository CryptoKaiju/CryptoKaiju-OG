{
  "hosting": {
    "public": "./dist/",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "main"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/scripts/**",
      "**/migrations/**",
      "**/contracts/**",
      "**/config/**",
      "**/src/**",
      "**/test/**"
    ]
  }
}
